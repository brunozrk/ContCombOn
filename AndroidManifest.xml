<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.contcombon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name="com.contcombon.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.contcombon.IndexActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.RankingActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.ProfileActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.ContactActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.BaseActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.CarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.SupplyActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name="com.contcombon.SummaryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize" />
    </application>

</manifest>